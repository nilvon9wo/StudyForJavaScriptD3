var add = function(a,b){
	if (typeof a !== 'number' || typeof b !== 'number'){
		throw {
			name: 'TypeError',
			message: 'add needs numbers'
		}
	}
	
	return a+b;
}

var sum = add(3,4);

var array = [3,4];
var sum2 = add.apply(null, array);

var sum3 = function(){
	var sum = 0;
	if (arguments){
		var slicedArguments = Array.prototype.slice.call(arguments);
		slicedArguments.forEach(function(argument){
			sum += argument;
		});	
	}
	return sum;
}