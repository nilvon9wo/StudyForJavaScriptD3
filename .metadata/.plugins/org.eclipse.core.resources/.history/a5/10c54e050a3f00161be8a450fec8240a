document.writeln('Hello, world!');

var myObject = {
		value: 0,
		
		double: function(){
			var that = this;
			
			var helper = function(){
				that.value = add(that.value, that.value);
			}
			
			helper();
		},
		
		increment: function(_increment){
			this.value += typeof _increment === 'number' ? _increment : 1;
		}
}

myObject.increment();
document.writeln(myObject.value);

myObject.increment(2);
document.writeln(myObject.value);

myObject.double();
document.writeln('Value: ' + myObject.getValue());